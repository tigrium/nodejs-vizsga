<%- include('header') %>

<main class="container m-auto my-5" style="max-width: 500px">
  <form method="post">
    <h1 class="h3 mb-3 fw-normal">Bejelentkezés</h1>

    <% if (typeof errors !== 'undefined') { %>
    <%- include('errorMessages', {errors}) %>
    <% } %>

    <div class="input-group mb-3 my-2">
      <span class="input-group-text" id="basic-addon1"><i class="bi bi-envelope-at"></i></span>
      <div class="form-floating">
        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="<%= typeof email === 'string' ? email : '' %>" />
        <label for="email">E-mail cím</label>
      </div>
    </div>

    <div class="input-group mb-3 my-2">
      <span class="input-group-text" id="basic-addon1"><i class="bi bi-key"></i></span>
      <div class="form-floating">
        <input type="password" class="form-control" id="pass" name="pass" placeholder="Password" value="<%= typeof pass === 'string' ? pass : '' %>" />
        <label for="pass">Jelszó</label>
      </div>
    </div>

    <a href="/forgotpass" class="link-primary text-decoration-none my-2">Elfelejtettem a jelszavam</a>

    <button class="btn btn-primary w-100 py-2 my-2" type="submit">Bejelentkezés</button>

    <div>Még nem regisztráltam</div>

    <a href="/signup" class="btn btn-outline-primary my-2 w-100 py-2"> Regisztráció </a>
  </form>
</main>

<%- include('footer') %>