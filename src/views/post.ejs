<% if (typeof post !== 'undefined') { %>
<div class="card mt-3">
  <div class="card-header">
    <div><%= post.user %></div>
    <div class="fw-lighter" style="font-size: 80%;"><%= post.ts %></div>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= post.text %></p>
      <% if (typeof post.original !== 'undefined') { %>
      <footer class="blockquote-footer">
        <%= post.original.user %>&nbsp;<span class="fw-lighter" style="font-size: 80%;"
          >(<%= post.original.ts %>)</span
        >
      </footer>
      <% } %>
    </blockquote>
  </div>
</div>
<div class="text-end">
  <button class="btn btn-link link-primary text-decoration-none">
    Ez tetszik, kikukor√©kolom!
  </button>
</div>
<% } %>
